@{
    ViewBag.Title = "Room";
}
@section Styles{
    <link href="~/poker.css" rel="stylesheet" type="text/css" />
}
<h2>Scrum poker room #@(Request.QueryString["RoomID"])</h2>

<div class="container">
    <!--hidden stuff-->
    @Html.Hidden("RoomID")
    <input type="hidden" id="userid" />
    <div id="top">
        <div id="vote-box" style="float:left">
            Votes: <br /><div id="votes"></div>
        </div>
        <div id="result-box" style="float:right">
            Result: <br/><div class="vote_card" id="result"></div>
        </div>
    </div>
    <br />
    <div style="clear:both"></div>
    Your Vote:
    <div id="cards" style="clear:both">
        <!--generated-->
    </div>
    <div style="clear:both">
        <ul id="log"></ul>
    </div>
    <button class="btn btn-danger" id="resetBtn" >Reset room</button>

</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/guid.js"></script>
    <!--SignalR script to update the page and send messages.-->
    <script src="~/Scripts/poker.js"></script>
}